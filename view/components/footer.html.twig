{# 
	Footer With Text and Socials

	socials(array): collection of social media icons
		link(string): url for social account
		name(string): network name

	content(string): html string of content
#}
<footer class="spark-footer">
	<div class="footer-menu">
		{% include '/view/nav/footer.html.twig' with { 'menu' : menu } %}
	</div>
	<div class="spark-footer-text">
		<div class="spark-container">
			<div class="spark-footer-copy">
				{{ content }}
			</div>
			<div class="spark-footer-socials">
				{% for account in social %}
					<a {% if account.social_site_url|length %} href="{{ account.social_site_url }}"{% endif %} 
					class="{{ account.social_site_name }} fab fa-{{ account.social_site_name }}" target="blank"></a>
				{% endfor %}
			</div>
		</div>
	</div>
</footer>